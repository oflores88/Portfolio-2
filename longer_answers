beatles = [
  {
    name: nil,
    nickname: "The Smart One"
  },
  {
    name: nil,
    nickname: "The Funny One"
  },
  {
    name: nil,
    nickname: "The Cute One"
    },
  {
    name: nil,
    nickname: "The Quiet One"
  }
]

i = 0
while i < beatles.length
  # Your code here!
  case beatles[i][:nickname]
  when "The Smart One"
    beatles[i][:name] = "John"
  when "The Funny One"
    beatles[i][:name] = "Ringo"
  when "The Cute One"
    beatles[i][:name] = "Paul"
  when "The Quiet One"
    beatles[i][:name] = "George"
    end
  i += 1
end

i = 0
while i < beatles.length
  puts "Hi, I'm #{beatles[i][:name]}.  I'm #{beatles[i][:nickname]}!"
  i += 1
end







class UrlParser


  def initialize(url)
    @url = url


  end

  def scheme
    scheme_name = @url.split(":")[0]
  end

  def domain
    @url.slice(/w.*om/)
  end

  def port
    port_num = @url.slice(/6.*0/)
     if scheme == "http" && port_num.nil?
       port_num = "80"
     elsif scheme == "https" && port_num.nil?
       port_num = "443"
     else
       port_num
     end
  end

  def path
    result = @url.split("/").last.split("?").first
    if result == ""
      nil
    else
      result
    end
  end

  def query_string
    array = @url.split("?").last.split("#").first.split(/[=, &]/)
    # {array[0] => array[1], array[2] => array[3]}
    h = {}
    len = array.length
    index = 0
    while index < len
      h [array[index]] = array[index + 1]
      index += 2
    end
    return h
  end

  def fragment_id
    @url.split("#").last
  end


end








